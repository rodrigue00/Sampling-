{
  "file_path": "data/iris.csv",
  "random_state": 42,

  "sampling": {
    "enabled": true,
    "sampling_type": "random", // ou "gmm"
    "fraction": 0.2
  },

  "train_test_split": {
    "enabled": true,
    "test_size": 0.2
  },

  "models": {
    "Decision Tree": {
      "enabled": true,
      "max_depth": 10
    },
    "Random Forest": {
      "enabled": true,
      "n_estimators": 100,
      "max_depth": 15
    },
    "SVM": {
      "enabled": true,
      "C": 1.0,
      "kernel": "rbf"
    },
    "Neural Network": {
      "enabled": true,
      "hidden_layer_sizes": [100],
      "learning_rate_init": 0.001
    },
    "XGBoost": {
      "enabled": true,
      "n_estimators": 100,
      "max_depth": 6,
      "learning_rate": 0.1
    }
  },

  "use_optuna": true,
  "n_trials": 50,

  "retrain_with_best_params": true,

  "save_best_model": true,
  "model_save_path": "best_model.pkl",
  "target_column": "species",

  "gmm": {
    "n_components_range": [1, 2, 3, 4, 5],
    "covariance_types": ["full", "tied", "diag", "spherical"]
  }
}
